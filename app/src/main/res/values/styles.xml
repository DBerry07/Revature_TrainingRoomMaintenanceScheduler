<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/revOrange</item>
        <item name="colorPrimaryDark">@color/revOrangeDark</item>
        <item name="colorAccent">@color/revGreen</item>
    </style>

    <!-- BEGIN GLOBAL STYLES -->
    <style name="cardViewGlobal" parent="CardView">
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">@dimen/card_roundRadius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="scrollViewGlobal">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>
    <!-- END GLOBAL STYLES -->

    <style name="frameLayoutContainer">
        <item name="android:background">@color/globalBackgroundColor</item>
    </style>

    <style name="fragmentTitle">
        <item name="android:textColor">@color/revOrange</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fragment_title_text_size</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:layout_margin">@dimen/global_control_margin</item>
        <item name="android:padding">@dimen/global_control_margin</item>
    </style>

    <style name="switchTheme" parent="Theme.AppCompat.Light">
        <item name="android:thumbTint">@color/switch_color</item>
        <item name="android:trackTint">@color/switch_track_color</item>
    </style>

    <style name="containerSignature">
        <item name="android:background">@drawable/background_black_stroke</item>
        <item name="android:layout_marginLeft">@dimen/global_control_margin</item>
        <item name="android:layout_marginRight">@dimen/global_control_margin</item>
        <item name="android:layout_marginTop">@dimen/container_signature_top_margin</item>
        <item name="android:paddingBottom">@dimen/global_control_margin</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="textViewSignature">
        <item name="android:textSize">@dimen/login_title_size</item>
        <item name="android:paddingBottom">@dimen/textView_signature_padding</item>
        <item name="android:background">@drawable/background_signature_bottom_border</item>
    </style>
    <style name="textViewSimpleStringAdapter">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/global_card_text_size</item>
    </style>

    <style name="floatingActionButton">
        <item name="android:colorAccent">@color/prime</item>
    </style>


</resources>
