<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_simple_string"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/global_control_margin">

    <TextView
        android:id="@+id/reports_room_name"
        style="@style/textViewSimpleStringAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/global_control_margin"
        android:paddingLeft="@dimen/global_control_margin"
        android:text="TextView" />

    <TextView
        android:id="@+id/reports_room_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/global_control_margin"
        android:paddingLeft="@dimen/global_control_margin"
        android:text="TextView"
        android:textStyle="italic" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

</LinearLayout>