<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@android:color/white"
        android:padding="@dimen/container_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-120dp">

        <ImageView
            android:id="@+id/img_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/revature_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/login_title"
            android:textColor="@color/login_title_gray"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_login_logo" />
        <LinearLayout
            android:id="@+id/email_container"
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_login_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/login_icon_person"/>

                <EditText
                    android:id="@+id/et_login_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_gray_border"
                    android:hint="@string/login_hint_email"
                    android:inputType="textEmailAddress"
                    android:padding="3dp"
                    android:textColorHint="@color/login_title_gray"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_invalid_email_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/red"
                android:layout_gravity="end"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="  Invalid Email!  "
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/password_container"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/global_control_margin"
            android:layout_marginBottom="@dimen/global_control_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/email_container">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_login_password"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/login_icon_password" />

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_gray_border"
                    android:hint="@string/login_hint_password"
                    android:inputType="textPassword"
                    android:padding="3dp"
                    android:textColorHint="@color/login_title_gray"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_invalid_password_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/red"
                android:layout_gravity="end"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="  Invalid Password!  "
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keep_login_container"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/global_control_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@+id/password_container">

            <CheckBox
                android:id="@+id/chk_keep_logged_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_msg_forgotPassword"
                android:layout_marginRight="5dp"
                android:padding="0dp" />
            <Button
                android:id="@+id/btn_login"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Login"/>
        </LinearLayout>




